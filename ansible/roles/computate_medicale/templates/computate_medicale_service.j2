[Unit]
Description=Watch the computate app and generate Java code when the Java source files are modified. 
After=network.target

[Service]
Type=simple
User={{USER_NAME}}
Group={{USER_NAME}}
WorkingDirectory={{COMPUTATE_MEDICALE_SRC}}
Environment=appliNom={{COMPUTATE_MEDICALE_NAME}}
Environment=appliChemin={{COMPUTATE_MEDICALE_SRC}}
Environment=appliComputateChemin={{COMPUTATE_SRC}}
ExecStart={{COMPUTATE_SRC}}/bin/{{COMPUTATE_MEDICALE_LANG}}/regarder.sh
LimitNOFILE=65000
LimitNPROC=65000
Restart=on-failure

[Install]
WantedBy=multi-user.target

