[Unit]
Description=Watch the computate app and generate Java code when the Java source files are modified. 
After=network.target

[Service]
Type=simple
User={{USER_NAME}}
Group={{USER_NAME}}
WorkingDirectory={{SOUTHERNCOALITION_SRC}}
Environment=appName={{SOUTHERNCOALITION_NAME}}
Environment=appPath={{SOUTHERNCOALITION_SRC}}
Environment=appComputatePath={{COMPUTATE_SRC}}
Environment=lang={{SOUTHERNCOALITION_LANG}}
ExecStart={{COMPUTATE_SRC}}/bin/enUS/watch.sh
LimitNOFILE=65000
LimitNPROC=65000
Restart=on-failure

[Install]
WantedBy=multi-user.target

